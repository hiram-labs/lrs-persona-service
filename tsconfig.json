{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2021", "dom"],
    "typeRoots": ["./node_modules/@types"],
    // "removeComments": true,  // comments need to be left for istanbul code coverage because for some reason test are run after build
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist/**/*"],
  "compileOnSave": false
}
